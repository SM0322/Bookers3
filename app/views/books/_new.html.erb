<h2 class="mt-3">New book</h2>

  <%= form_with model: book do |f| %>
  <div class="form-group">
    Title
  </div>
  <p><%= f.text_field :title %></p>
  <div class="form-group">
    Opinion
  </div>
  <p><%= f.text_area :body %></p>
  
  <div class="row">
    <%= f.submit 'Create Book', class: 'btn btn-success btn-sm' %>
  </div>

<% end %>