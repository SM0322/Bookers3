<h2>User info</h2>
<%= form_with model: user do |f| %>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  
  <table class="table">
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  
<% end %>


  <a>
    <%= link_to edit_user_path(user),class: 'btn btn-outline-secondary btn-block' do %>
    <i class="fas fa-user-cog"></i>
  </a>
<% end %>