<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <%= render 'user', user: current_user %>
      <%= render 'books/new', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table">
          <tr>
            <td>image</td>
            <td>name</td>
            <td></td>
          </tr>
          <% @users.each do |user| %>
          <tr>
           <td>
            <%= image_tag user.get_profile_image(100,100) %>
           </td>
           <td><%= user.name %></td>
           <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </table>
      
    </div>
    
  </div>
</div>

